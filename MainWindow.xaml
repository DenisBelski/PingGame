<Window x:Class="PingGame.Game"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingGame"
        mc:Ignorable="d"
        Title="Game" Height="501" Width="533" WindowStartupLocation="CenterScreen" KeyDown="cmKey">
    <Grid>
        <Canvas x:Name="gameField" Width="500" Background="#FFD5EFFF" Height="400" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0"/>
        <Label Content="Time:" HorizontalAlignment="Left" Margin="33,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbTime" HorizontalAlignment="Left" Margin="76,14,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
